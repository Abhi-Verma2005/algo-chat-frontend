{
  "manifest_version": 3,
  "name": "LeetCode Whisper",
  "version": "1.0.0",
  "description": "Chrome extension providing AI-driven hints on LeetCode problems. Get step-by-step help to boost problem-solving skills effectively.",
  "permissions": ["storage", "sidePanel", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "index.html"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": [
        "https://leetcode.com/problems/*",
        "https://www.codechef.com/problems/*",
        "https://www.codechef.com/submit/*",
        "https://www.codechef.com/*/problems/*",
        "https://www.codechef.com/*/submit/*",
        "https://www.codechef.com/practice/*",
        "https://codechef.com/problems/*",
        "https://codechef.com/submit/*",
        "https://codechef.com/*/problems/*",
        "https://codechef.com/*/submit/*",
        "https://codechef.com/practice/*"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "index.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3001/*",
    "https://leetcode.com/*",
    "https://www.codechef.com/*",
    "https://codechef.com/*",
    "https://algo-chat-gamma.vercel.app/*"
  ]
}
